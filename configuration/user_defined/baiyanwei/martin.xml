<mca>
	<services>
		<MonitoringTaskCacheService>
			<taskPath>/home/baiyanwei/secpro/project/run/task/</taskPath>
			<prefixTaskName>task</prefixTaskName>
			<taskExecuteHour>21</taskExecuteHour>
			<taskExecMin>45</taskExecMin>
			<taskExecSec>0</taskExecSec>
			<taskNameTimeFormat1>yyyyMMdd</taskNameTimeFormat1>
			<taskNameTimeFormat2>yyyyMMddHHmmss</taskNameTimeFormat2>
			<taskTimerExecuteInterval>120000</taskTimerExecuteInterval>
		</MonitoringTaskCacheService>
		<MonitoringService>
			<messageTimeout>120000</messageTimeout>
			<operationCapabilities>snmp,ssh</operationCapabilities>
			<fetchTSSTaskInterval>2000</fetchTSSTaskInterval>
			<concurrentWorkflows>2</concurrentWorkflows>
			<jmxObjectName>secpro:type=MonitoringService</jmxObjectName>
		</MonitoringService>
		<MetricUploadService>
			<!--uploadMode:directly/pool -->
			<uploadMode>pool</uploadMode>
			<isUploadMetricInPackage>true</isUploadMetricInPackage>
			<minLimitPackageSiz>1024</minLimitPackageSiz>
			<maxLimitPackageSize>5120</maxLimitPackageSize>
		</MetricUploadService>
		<StorageAdapterService>
			<storageType>com.secpro.platform.monitoring.agent.storages.http.HTTPStorageAdapter</storageType>
		</StorageAdapterService>
		<HTTPStorageAdapter>
			<hostName>localhost</hostName>
			<hostPort>8080</hostPort>
			<fetchTaskPath>/tss/samples/fetch</fetchTaskPath>
			<pushSamplePath>/tss/samples/push</pushSamplePath>
			<userName>MCA</userName>
			<passWord>123456</passWord>
		</HTTPStorageAdapter>
		<MonitoringNodeService>
			<nodeLocation>HB</nodeLocation>
		</MonitoringNodeService>
		<MetricStandardService>
			<hostName>localhost</hostName>
			<hostPort>8080</hostPort>
			<fetchStandardRulesPath>/tss/standard/fetch</fetchStandardRulesPath>
		</MetricStandardService>
		<SysLogBeaconInterface>
			<sysLogPath>/home/baiyanwei/secpro/project/run/syslog</sysLogPath>
			<sysLogMax>50</sysLogMax>
			<sysLogListenerPort>8514</sysLogListenerPort>
			<sysLogName>syslog</sysLogName>
		</SysLogBeaconInterface>
	</services>
</mca>	